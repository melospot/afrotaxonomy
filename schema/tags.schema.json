{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://afrotaxonomy.org/schema/tags.schema.json",
  "title": "Tag Vocabulary",
  "type": "object",
  "required": ["id", "values"],
  "additionalProperties": true,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$"
    },
    "description": {
      "type": "string"
    },
    "values": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "type": "object",
            "required": ["id"],
            "additionalProperties": true,
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9_]+$"
              },
              "label": {
                "type": "string"
              },
              "countries": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^[A-Z]{2}$"
                }
              }
            }
          }
        ]
      }
    }
  }
}
